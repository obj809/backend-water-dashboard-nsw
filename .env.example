# Database provider: "local" for MySQL, "supabase" for PostgreSQL, "oracle" for Oracle Autonomous Database
DB_PROVIDER=local

# Local MySQL database
LOCAL_DATABASE_URI=mysql+mysqlconnector://user:password@localhost:3306/dbname

# Supabase PostgreSQL database
SUPABASE_DATABASE_URI=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# Legacy variables (kept for compatibility with scripts)
DB_USER=xxxxxxxxxx
DB_PASSWORD=xxxxxxxxxx
DB_NAME=xxxxxxxxxx
DB_HOST=xxxxxxxxxx
DB_PORT=xxxxxxxxxx

# Flask settings
SECRET_KEY=your-secret-key
DEBUG=True
